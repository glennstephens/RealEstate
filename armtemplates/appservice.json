{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "name": {
            "type": "string",
            "metadata": {
                "description": "Must be globally unique. The site will be hosted at [name].azurewebsites.net"
            },
            "defaultValue": "learn-realestate"
        },
        "hostingPlanName": {
            "type": "string",
            "metadata": {
                "description": "The name of the App Service Plan - we create a new one. The name must be unique within your subscription."
              },
              "defaultValue": "ASP-Learn-RealEstate"
        },
        "alwaysOn": {
            "type": "bool",
            "metadata": {
                "description": "Keep the app loaded even when there's no traffic. It's required for continuous WebJobs or for WebJobs that are triggered using a CRON expression."
            },
            "defaultValue": false
        },
        "skuCode": {
            "type": "string",
            "metadata": {
                "description": "The SKU of the App Service Plan. For example, F1 is a free plan for development purposes. S1 is a paid plan with better hardware. Note: You cannot use S1 in the Sandbox!"
            },
            "allowedValues": [
                "F1",
                "S1"
            ],
            "defaultValue": "F1"
        },
        "currentStack": {
            "type": "string",
            "metadata": {
              "description": "We're building a .NET Core app so no other selection allowed"
            },
            "defaultValue": "dotnetcore",
            "allowedValues": [
              "dotnetcore"
            ]
          }
    },
    "resources": [
        {
            "apiVersion": "2018-02-01",
            "name": "[parameters('name')]",
            "type": "Microsoft.Web/sites",
            "location": "[resourceGroup().location]",
            "tags": {
                " ProjectType": "LearnLive"
            },
            "properties": {
                "name": "[parameters('name')]",
                "siteConfig": {
                    "connectionStrings": [
                        {
                            "name": "AzureDBLiveConnection",
                            "value": "[you can get this from your SQL Database resource]"
                        }
                    ],
                    "metadata": [
                        {
                            "name": "CURRENT_STACK",
                            "value": "[parameters('currentStack')]"
                        }
                    ],
                    "alwaysOn": "[parameters('alwaysOn')]"
                },
                "serverFarmId": "[resourceId('Microsoft.Web/sites', parameters('appServiceName'))]",
                "hostingEnvironment": "",
                "clientAffinityEnabled": true
            }
        },
        {
            "apiVersion": "2018-02-01",
            "name": "[parameters('hostingPlanName')]",
            "type": "Microsoft.Web/serverfarms",
            "location": "[resourceGroup().location]",
            "kind": "",
            "tags": {
                " ProjectType": "LearnLive"
            },
            "dependsOn": [],
            "properties": {
                "name": "[parameters('hostingPlanName')]",
                "workerSize": "0",
                "workerSizeId": "0",
                "numberOfWorkers": "1",
                "hostingEnvironment": ""
            },
            "sku": {
                "Name": "[parameters('skuCode')]"
            }
        }
    ]
}